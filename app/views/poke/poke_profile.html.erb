<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PokeProfile</title>
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <div class="row">
      <div class="col-lg">
        <div class="thumbnail">
          <img src="<%= @pokemon.img %>" alt="pokemon image">
          <div class="caption">
            <h3><%= @pokemon.name %></h3>
            <% @pokemon.types.each do | type | %>
              <div class="types">
                <button class="btn btn-primary" role="button"><%= type['type']['name'] %></button> 
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>