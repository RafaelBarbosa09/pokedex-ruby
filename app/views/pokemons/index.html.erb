<div class="container">
  <div class="row">
    <% @list_pokemons.each do | pokemon | %>
      <a href="/pokemons/<%= pokemon.id %>">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="<%= pokemon.img %>" alt="pokemon image">
            <div class="caption">
            <h3><%= pokemon.name %></h3>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>